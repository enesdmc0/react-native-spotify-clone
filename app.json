{
  "expo": {
    "name": "Spotify Clone", // App store'da görünecek isim
    "slug": "spotify-clone", // Expo'nun kullandığı benzersiz tanımlayıcı
    "version": "1.0.0", // Uygulama versiyonu
    "orientation": "portrait", // Ekran yönü
    "scheme": "spotifyclone", // Deep linking için URL şeması
    "userInterfaceStyle": "automatic", // Sistem teması uyumu
    "icon": "./assets/images/icon.png", // Ana uygulama ikonu

    "splash": {
      // Splash screen ayarları
      "image": "./assets/images/logo-green.png",
      "resizeMode": "contain",
      "backgroundColor": "#191314"
    },

    "ios": {
      "supportsTablet": true // iPad desteği
    },

    "android": {
      "adaptiveIcon": {
        // Android adaptive icon
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },

    "plugins": ["expo-router"], // Expo eklentileri

    "experiments": {
      "typedRoutes": true // TypeScript route desteği
    }
  }
}
